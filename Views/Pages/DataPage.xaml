<Page x:Class="Simulator.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Title="DrawPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox Width="70" SelectedItem="{Binding SelectedDrawCount, Mode=TwoWay}">
                <sys:Int32>1</sys:Int32>
                <sys:Int32>2</sys:Int32>
                <sys:Int32>3</sys:Int32>
                <sys:Int32>4</sys:Int32>
                <sys:Int32>5</sys:Int32>
            </ComboBox>

            <Button Margin="10,0,0,0"
                    Width="100"
                    Height="40"
                    Command="{Binding DrawOneCommand}">
                <TextBlock Text="{Binding SelectedDrawCount, StringFormat='{}{0}회 뽑기'}"/>
            </Button>


            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="{Binding TotalDraws, StringFormat=총 뽑기: {0}회}" />
                <TextBlock Text="{Binding Tickets, StringFormat=티켓: {0}개}" />
                <TextBlock Text="{Binding RemainingDraws, StringFormat=잔여 뽑기: {0}회}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="마지막 결과"
                       FontWeight="Bold"
                       Margin="0,0,0,5">
            </TextBlock>

            <TextBlock Text="{Binding LastResultText}"
                       FontSize="16"
                       Margin="0,0,0,10">
            </TextBlock>

            <DataGrid ItemsSource="{Binding History}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="250" SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50"/>
                    <DataGridTextColumn Header="시간" Binding="{Binding Time}" Width="*"/>
                    <DataGridTextColumn Header="아이템" Binding="{Binding Prize.Name}" Width="2*"/>
                    <DataGridTextColumn Header="등급" Binding="{Binding Prize.Rarity}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
