<Page x:Class="Simulator.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:conv="clr-namespace:Simulator.Helpers"
      xmlns:models="clr-namespace:Simulator.Models"
      mc:Ignorable="d"
      Title="DataPage">

    <Page.Resources>
        <conv:IntEqualsConverter x:Key="IntEqualsConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="CompactRadioButton"
               TargetType="RadioButton"
               BasedOn="{StaticResource {x:Type RadioButton}}">
            <Setter Property="Margin"   Value="2,0,2,0"/>
            <Setter Property="Padding"  Value="4,0"/>
            <Setter Property="MinWidth" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="16"
                CornerRadius="8"
                Background="#12FFFFFF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal">
                    <TextBlock Text="상품 구매"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox Width="220"
                              ItemsSource="{Binding BuyChances}"
                              SelectedItem="{Binding SelectedBuyChance, Mode=TwoWay}"
                              DisplayMemberPath="Display"/>
                    <Button Content="구매"
                            Width="70"
                            Height="30"
                            Margin="8,0,0,0"
                            Command="{Binding BuyCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,12,0,0">
                    <TextBlock Text="뽑기 설정"
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="뽑기 횟수"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>

                        <RadioButton Content="1회"
                                     Style="{StaticResource CompactRadioButton}"
                                     GroupName="DrawCount"
                                     IsChecked="{Binding SelectedDrawCount,
                                                         Mode=TwoWay,
                                                         Converter={StaticResource IntEqualsConverter},
                                                         ConverterParameter=1}" />

                        <RadioButton Content="2회"
                                     Style="{StaticResource CompactRadioButton}"
                                     GroupName="DrawCount"
                                     IsChecked="{Binding SelectedDrawCount,
                                                         Mode=TwoWay,
                                                         Converter={StaticResource IntEqualsConverter},
                                                         ConverterParameter=2}" />

                        <RadioButton Content="3회"
                                     Style="{StaticResource CompactRadioButton}"
                                     GroupName="DrawCount"
                                     IsChecked="{Binding SelectedDrawCount,
                                                         Mode=TwoWay,
                                                         Converter={StaticResource IntEqualsConverter},
                                                         ConverterParameter=3}" />

                        <RadioButton Content="4회"
                                     Style="{StaticResource CompactRadioButton}"
                                     GroupName="DrawCount"
                                     IsChecked="{Binding SelectedDrawCount,
                                                         Mode=TwoWay,
                                                         Converter={StaticResource IntEqualsConverter},
                                                         ConverterParameter=4}" />

                        <RadioButton Content="5회"
                                     Style="{StaticResource CompactRadioButton}"
                                     GroupName="DrawCount"
                                     IsChecked="{Binding SelectedDrawCount,
                                                         Mode=TwoWay,
                                                         Converter={StaticResource IntEqualsConverter},
                                                         ConverterParameter=5}" />

                        <Button Margin="8,0,0,0"
                                Width="110"
                                Height="32"
                                Command="{Binding DrawOneCommand}">
                            <TextBlock Text="{Binding SelectedDrawCount,
                                                      StringFormat='{}{0}회 뽑기'}"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <TextBlock Text="통계"
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>

                    <TextBlock Text="{Binding TotalDraws,     StringFormat=총 뽑기: {0}회}" />
                    <TextBlock Text="{Binding Tickets,        StringFormat=티켓: {0}개}" />
                    <TextBlock Text="{Binding RemainingDraws, StringFormat=잔여 뽑기: {0}회}" />
                    <TextBlock Text="{Binding SpentMoneyText, StringFormat=총 사용 금액: {0}}" />

                    <Button Margin="0,10,0,0"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Right"
                            Command="{Binding ResetCommand}">
                        <TextBlock Text="초기화"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0"
               Text="마지막 결과"
               FontWeight="Bold"
               Margin="0,0,0,4"/>
            
            <TextBlock Grid.Row="1"
               Text="{Binding LastResultText}"
               FontSize="16"
               Margin="0,0,0,12"/>

            <DataGrid Grid.Row="2"
              ItemsSource="{Binding History}"
              AutoGenerateColumns="False"
              IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#"
                                        Binding="{Binding Index}"
                                        Width="60"/>

                    <DataGridTextColumn Header="시간"
                                        Binding="{Binding DrawTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                        Width="*"/>

                    <DataGridTextColumn Header="아이템"
                                        Binding="{Binding Prize.Name}"
                                        Width="*"/>

                    <DataGridTextColumn Header="등급"
                                        Binding="{Binding Prize.Rarity}"
                                        Width="*"/>

                    <DataGridTemplateColumn Header="상태"
                                            Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="교환됨"
                                           HorizontalAlignment="Center"
                                           Visibility="{Binding TiketExchanged,
                                                                Converter={StaticResource BoolToVisibilityConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.RowSpan="2"
              Visibility="{Binding IsEffectVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              VerticalAlignment="Top" Margin="0,80,0,100">
            <Grid x:Name="OrbContainer"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Grid.RenderTransform>

                <Ellipse Width="280"
                         Height="280"
                         Opacity="0.8"
                         Fill="{Binding EffectBrush}">
                    <Ellipse.Effect>
                        <BlurEffect Radius="60" />
                    </Ellipse.Effect>
                </Ellipse>

                <Ellipse Width="220"
                         Height="220"
                         Opacity="0.95"
                         Fill="{Binding EffectBrush}">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="White"
                                          BlurRadius="40"
                                          ShadowDepth="0"
                                          Opacity="0.8" />
                    </Ellipse.Effect>
                </Ellipse>

                <Ellipse Width="140"
                         Height="80"
                         VerticalAlignment="Top"
                         Margin="0,35,0,0"
                         Opacity="0.5">
                    <Ellipse.Fill>
                        <RadialGradientBrush GradientOrigin="0.5,0.0">
                            <GradientStop Color="#FFFFFFFF" Offset="0.0" />
                            <GradientStop Color="#00FFFFFF" Offset="1.0" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever"
                                    AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetName="OrbContainer"
                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                             From="0.95" To="1.05"
                                             Duration="0:0:0.6" />
                            <DoubleAnimation Storyboard.TargetName="OrbContainer"
                                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                             From="0.95" To="1.05"
                                             Duration="0:0:0.6" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>

        <Grid Grid.RowSpan="2"
              Visibility="{Binding IsDecisionLocked, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.Background>
                <SolidColorBrush Color="#CC000000" />
            </Grid.Background>

            <Border Padding="16"
                    CornerRadius="16"
                    Background="#EE1E1E1E"
                    BorderBrush="#80FFFFFF"
                    BorderThickness="1.5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,80,0,40">
                <StackPanel>
                    <TextBlock Text="보상 선택"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <ItemsControl ItemsSource="{Binding CurrentBatch}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="6"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" CornerRadius="10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#262D35"/>
                                            <Setter Property="BorderBrush" Value="#00FFFFFF"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="MinWidth" Value="420"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Selection}"
                                                            Value="{x:Static models:RewardSelection.Item}">
                                                    <Setter Property="BorderBrush" Value="#FF2B7FE6"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="Background" Value="#332B7FE6"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Selection}"
                                                             Value="{x:Static models:RewardSelection.Ticket}">
                                                    <Setter Property="BorderBrush" Value="#FFE6C25B"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="Background" Value="#33E6C25B"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <TextBlock Text="{Binding Prize.Name}"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   TextAlignment="Center"
                                                   Margin="0,0,0,4"/>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,8,0,0">
                                            <Button Content="상품"
                                                    Padding="6,2"
                                                    Margin="0,0,4,0"
                                                    Width="100"
                                                    Height="40"
                                                    Command="{Binding DataContext.SelectItemCommand,
                                                                      RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#444A4F56"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Selection}"
                                                                         Value="{x:Static models:RewardSelection.Item}">
                                                                <Setter Property="Background" Value="#FF2B7FE6"/>
                                                                <Setter Property="BorderBrush" Value="#FF2B7FE6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="{Binding Prize.TiketValue, StringFormat='티켓 {0}개'}"
                                                    Padding="6,2"
                                                    Margin="4,0,0,0"
                                                    Width="100"
                                                    Command="{Binding DataContext.SelectTicketCommand,
                                                                      RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                                                    CommandParameter="{Binding}"
                                                    >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#444A4F56"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Selection}"
                                                                        Value="{x:Static models:RewardSelection.Ticket}">
                                                                <Setter Property="Background" Value="#FFE6C25B"/>
                                                                <Setter Property="BorderBrush" Value="#FFE6C25B"/>
                                                                <Setter Property="Foreground" Value="#222222"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Content="받기"
                            Width="120"
                            Height="32"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0"
                            Command="{Binding ConfirmRewardsCommand}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
